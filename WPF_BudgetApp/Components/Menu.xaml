<UserControl x:Class="WPF_BudgetApp.Components.Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WPF_BudgetApp.Components"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d"
             d:DesignHeight="720" d:DesignWidth="300">
    <Border BorderBrush="Gray" BorderThickness="0 0 1 0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="20*" />
                <RowDefinition Height="70*" />
                <RowDefinition Height="10*" />
            </Grid.RowDefinitions>
                
            <StackPanel Grid.Row="0" VerticalAlignment="Center">
                <Button Style="{StaticResource iconsButtons}" Height="50" Width="50" Foreground="Aquamarine" Command="{Binding UserCommand}" >
                    <iconPacks:PackIconMaterial Kind="Account" Width="50" Height="50" />
                </Button>
                <TextBlock Text="{Binding Name}" Style="{StaticResource baseTextBlockStyle}" HorizontalAlignment="Center" FontSize="25"/>
            </StackPanel>
                
            <StackPanel x:Name="MenuPanel" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                <RadioButton Style="{StaticResource radioButtons}" FontSize="20" 
                             Name="DashBoardButton"
                             Content="Global Dashboard"
                             Command="{Binding MenuCommand}"
                             CommandParameter="{Binding ElementName=DashBoardButton, Path=Name}"
                             />
                <RadioButton Style="{StaticResource radioButtons}" FontSize="20" 
                             Name="AccountButton"
                             Content="Accounts"
                             Command="{Binding MenuCommand}"
                             CommandParameter="{Binding ElementName=AccountButton, Path=Name}" 
                             />
                <RadioButton Style="{StaticResource radioButtons}" FontSize="20" 
                             Name="DebtButton"
                             Content="Debts"
                             Command="{Binding MenuCommand}"
                             CommandParameter="{Binding ElementName=DebtButton, Path=Name}" 
                             />
                <RadioButton Style="{StaticResource radioButtons}" FontSize="20" 
                             Name="ArchiveButton"
                             Content="Archives"
                             Command="{Binding MenuCommand}"
                             CommandParameter="{Binding ElementName=ArchiveButton, Path=Name}" 
                             />
            </StackPanel> 
                
            <Border Grid.Row="2" BorderThickness="0 1 0 0" BorderBrush="Gray">
                <Button Style="{StaticResource iconsButtons}" Height="30" Width="30" Foreground="Red" Command="{Binding LogoutCommand}">
                    <iconPacks:PackIconMaterial Kind="Logout" Width="30" Height="30" />
                </Button>
            </Border>
                
        </Grid>
    </Border>
</UserControl>
