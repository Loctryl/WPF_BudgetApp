<Window x:Class="WPF_BudgetApp.Windows.CategoryForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WPF_BudgetApp.Windows"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="CategoryForm" Height="450" Width="800" WindowStartupLocation="CenterScreen" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent"
        Style="{StaticResource window}">
    <Border Background="#fff" BorderThickness="2" BorderBrush="Blue" MouseDown="Border_MouseDown">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="35*"/>
                <ColumnDefinition Width="30*"/>
                <ColumnDefinition Width="35*"/>
            </Grid.ColumnDefinitions>
            
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="70*"/>
                    <RowDefinition Height="100"/>
                </Grid.RowDefinitions>
                
                <Grid Grid.Row="0" Name="addEditFields" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    
                    <Label Grid.Row="0" Style="{StaticResource labelTextBox}" Content="Category Name" />
                    <TextBox Grid.Row="0" Name="categoryNameTB" 
                             Style="{StaticResource textBox}" 
                             Height="25" 
                             Text="{Binding CategoryName}" 
                             SelectionChanged="AddEditConfirmAvailability" />
                    
                    <Label Grid.Row="1" Style="{StaticResource labelTextBox}" Content="Category Color" />
                    <xctk:ColorPicker Grid.Row="1"
                                      Style="{StaticResource textBox}" 
                                      Height="25" ColorMode="ColorCanvas" 
                                      SelectedColor="{Binding CategoryColor}"
                                      SelectedColorChanged="AddEditConfirmAvailability"/>
                </Grid>
                
                <Grid Grid.Row="0" Name="deleteFields" Visibility="Collapsed">
                    <TextBlock Style="{StaticResource baseTextBlockStyle}" FontSize="12" TextWrapping="Wrap" Margin="0 20 0 0"
                               Text="You need to choose another category for every transfer referencing the one you want to delete." />
                    
                    <Label Style="{StaticResource labelTextBox}" Content="Replacement Category" />
                    <ComboBox Name="replaceCategoryCB" SelectionChanged="DeleteConfirmAvailability"
                              ItemsSource="{Binding CategoriesOptions}" 
                              SelectedItem="{Binding ReplaceCategory}"
                              DisplayMemberPath="SourceName"
                              SelectedValuePath="SourceName"
                              Height="25"
                    >
                    </ComboBox>
                </Grid>
                
                <Grid Grid.Row="1" Height="40" MinWidth="220" HorizontalAlignment="Center">
                    <Button Name="ConfirmButt" Style="{StaticResource windowFormsButton}" Click="ConfirmButt_OnClick" Content="Confirm" HorizontalAlignment="Left" IsEnabled="False" />
                    <Button Style="{StaticResource windowFormsButton}" Click="CancelButt_OnClick" Content="Cancel" HorizontalAlignment="Right"/>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
