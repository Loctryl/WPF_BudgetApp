<Window x:Class="WPF_BudgetApp.Windows.TransferForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WPF_BudgetApp.Windows"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="TransferForm" Height="450" Width="800" WindowStartupLocation="CenterScreen" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent"
        Style="{StaticResource window}">
    <Border Background="#fff" BorderThickness="2" BorderBrush="Blue" MouseDown="Border_MouseDown">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="35*"/>
                <ColumnDefinition Width="30*"/>
                <ColumnDefinition Width="35*"/>
            </Grid.ColumnDefinitions>
            
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                
                <Label Grid.Row="0" Style="{StaticResource labelTextBox}" Content="Transfer Name" />
                <TextBox Grid.Row="0" Name="nameTB" Style="{StaticResource textBox}" Height="25" Text="{Binding TransferName}" />
                
                <Label Grid.Row="1" Style="{StaticResource labelTextBox}" Content="Transfer Amount" />
                <TextBox Grid.Row="1" Name="amountTB" Style="{StaticResource textBox}" Height="25" Text="{Binding TransferAmount}" />
                
                <Label Grid.Row="2" Style="{StaticResource labelTextBox}" Content="Transfer Category" />
                <ComboBox Grid.Row="2" Name="categoryCB" 
                          ItemsSource="{Binding Categories}" 
                          SelectedItem="{Binding TransferCategory}"
                          DisplayMemberPath="SourceName"
                          SelectedValuePath="SourceName"
                          Height="25"
                >
                </ComboBox>
                
                <Label Grid.Row="3" Style="{StaticResource labelTextBox}" Content="Transfer Date" />
                <DatePicker Grid.Row="3" Name="dateTB" 
                            Style="{StaticResource textBox}" 
                            Height="25" 
                            SelectedDate="{Binding TransferDate}"
                            />
                
                <Grid Grid.Row="4" Height="40" MinWidth="220" HorizontalAlignment="Center">
                    <Button Name="ConfirmButt" Style="{StaticResource windowFormsButton}" Click="ConfirmButt_OnClick" Content="Confirm" HorizontalAlignment="Left" />
                    <Button Name="CancelButt" Style="{StaticResource windowFormsButton}" Click="CancelButt_OnClick" Content="Cancel" HorizontalAlignment="Right"/>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
