<Window x:Class="WPF_BudgetApp.Windows.MessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WPF_BudgetApp.Windows"
        mc:Ignorable="d"
        Title="MessageBox" Height="225" Width="400" WindowStartupLocation="CenterScreen" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent"
        Style="{StaticResource window}">
    <Border Background="#fff" BorderThickness="2" BorderBrush="Blue">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="70*"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" Name="textDisplay"
                       Style="{StaticResource baseTextBlockStyle}" 
                       FontSize="20" TextWrapping="Wrap" TextAlignment="Center"
                       VerticalAlignment="Center"
                       MaxWidth="300"
                       Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit."
            />
            
            <Button Grid.Row="1" 
                    Style="{StaticResource windowFormsButton}" 
                    Click="ConfirmButt_OnClick" 
                    Content="Ok" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" />
        </Grid>
    </Border>
</Window>
