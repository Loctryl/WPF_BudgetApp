<Window x:Class="WPF_BudgetApp.Windows.DebtForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WPF_BudgetApp.Windows"
        mc:Ignorable="d"
        Title="DebtForm" Height="450" Width="800" WindowStartupLocation="CenterScreen" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent"
        Style="{StaticResource window}">
    <Border Background="#fff" BorderThickness="2" BorderBrush="Blue" MouseDown="Border_MouseDown">
        <Grid Name="mainGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30*"/>
                <ColumnDefinition Width="40*"/>
                <ColumnDefinition Width="30*"/>
            </Grid.ColumnDefinitions>
            
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="70*"/>
                    <RowDefinition Height="100"/>
                </Grid.RowDefinitions>
                
                <Grid Grid.Row="0" Name="addFields" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                    
                        <Label Grid.Column="0" Style="{StaticResource labelTextBox}" Content="Debt Name" />
                        <TextBox Grid.Column="0" Name="addDebtName" 
                                 Style="{StaticResource textBox}" 
                                 Height="25" 
                                 Text="{Binding DebtName}" 
                                 SelectionChanged="AddConfirmAvailability"
                                 />
                        
                        <Label Grid.Column="2" Style="{StaticResource labelTextBox}" Content="Initial Amount" />
                        <TextBox Grid.Column="2" Name="addDebtInitAmount" 
                                 Style="{StaticResource textBox}" 
                                 Height="25" 
                                 Text="{Binding DebtInitialAmount}"
                                 SelectionChanged="AddConfirmAvailability"
                             />
                    </Grid>
                    
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                    
                        <Label Grid.Column="0" Style="{StaticResource labelTextBox}" Content="Current Debt" />
                        <TextBox Grid.Column="0" Name="addDebtCurrAmount" 
                                 Style="{StaticResource textBox}" 
                                 Height="25" 
                                 Text="{Binding DebtCurrentAmount}"
                                 SelectionChanged="AddConfirmAvailability"
                                 />
                        
                        <Label Grid.Column="2" Style="{StaticResource labelTextBox}" Content="Debt Limit Date" />
                        <DatePicker Grid.Column="2"
                                    Style="{StaticResource textBox}" 
                                    Height="25" 
                                    SelectedDate="{Binding DebtLimitDate}" 
                                    />
                    
                    </Grid>
                    
                    <Label Grid.Row="2" Style="{StaticResource labelTextBox}" Content="Beneficiary Account" />
                    <ComboBox Grid.Row="2" Name="addDebtAccount" 
                              ItemsSource="{Binding AccountsOptions}" 
                              SelectedItem="{Binding BeneficiaryAccount}"
                              DisplayMemberPath="SourceName"
                              SelectedValuePath="SourceName"
                              Height="25"
                              SelectionChanged="AddConfirmAvailability"
                              />
                </Grid>
                
                <Grid Grid.Row="0" Name="editFields" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                
                    <Label Grid.Column="0" Grid.Row="0" Style="{StaticResource labelTextBox}" Content="Debt Name" />
                    <TextBox Grid.Column="0" Grid.Row="0" Name="editDebtName" 
                             Style="{StaticResource textBox}" 
                             Height="25" 
                             Text="{Binding DebtName}"
                             SelectionChanged="EditConfirmAvailability"
                             />
                    
                    <Label Grid.Row="1" Style="{StaticResource labelTextBox}" Content="Current Debt" />
                    <TextBox Grid.Row="1" Name="editDebtCurrAmount" 
                             Style="{StaticResource textBox}" 
                             Height="25" 
                             Text="{Binding DebtCurrentAmount}"
                             SelectionChanged="EditConfirmAvailability"
                             />
                    
                    <Label Grid.Row="2" Style="{StaticResource labelTextBox}" Content="Debt Limit Date" />
                    <DatePicker Grid.Row="2" 
                                Style="{StaticResource textBox}" 
                                Height="25" 
                                SelectedDate="{Binding DebtLimitDate}" 
                                />
                </Grid>
                
                <StackPanel Grid.Row="0" Name="deleteFields" Visibility="Collapsed" VerticalAlignment="Center">
                    <TextBlock Style="{StaticResource baseTextBlockStyle}" FontSize="30" TextWrapping="Wrap" TextAlignment="Center"
                               Margin="0 0 0 20" Foreground="Red"
                               Text="Deleting this debt. &#10; Are you sure ?" 
                    />
                </StackPanel>
                
                
                <Grid Grid.Row="1" Height="40" MinWidth="220" HorizontalAlignment="Center">
                    <Button Name="ConfirmButt" Style="{StaticResource windowFormsButton}" Click="ConfirmButt_OnClick" Content="Confirm" HorizontalAlignment="Left" IsEnabled="False" />
                    <Button Style="{StaticResource windowFormsButton}" Click="CancelButt_OnClick" Content="Cancel" HorizontalAlignment="Right"/>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
