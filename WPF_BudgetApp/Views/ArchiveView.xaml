<UserControl x:Class="WPF_BudgetApp.Views.ArchiveView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WPF_BudgetApp.Views"
             xmlns:comps="clr-namespace:WPF_BudgetApp.Components"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15*" />
            <ColumnDefinition Width="85*"/>
        </Grid.ColumnDefinitions>
        
        <comps:Menu Grid.Column="0" />
        
        <Grid Grid.Column="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20*" />
                    <RowDefinition Height="80*"/>
                </Grid.RowDefinitions>
                
                <Grid Grid.Row="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40*" />
                            <RowDefinition Height="60*"/>
                        </Grid.RowDefinitions>
                        
                        <Button Grid.Row="0" 
                                Style="{StaticResource windowFormsButton}" 
                                Width="200"
                                Content="Search"
                                Command="{Binding SearchCommand}"
                                />
                        
                        <Grid Grid.Row="1" VerticalAlignment="Bottom" Margin="0 0 0 15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            
                            <Label Grid.Column="0" Style="{StaticResource labelTextBox}" Content="Transfer Name" />
                            <TextBox Grid.Column="0"
                                     Style="{StaticResource textBox}" 
                                     Height="25"
                                     Margin="5"
                                     Text="{Binding Query.QueryName}" 
                                     />
                            
                            <Label Grid.Column="1" Style="{StaticResource labelTextBox}" Content="Transfer Account" />
                            <TextBox Grid.Column="1"
                                     Style="{StaticResource textBox}" 
                                     Height="25" 
                                     Margin="5"
                                     Text="{Binding Query.QueryAccount}" 
                                     />
                            
                            <Label Grid.Column="2" Style="{StaticResource labelTextBox}" Content="Transfer Category" />
                            <TextBox Grid.Column="2"
                                     Style="{StaticResource textBox}" 
                                     Height="25" 
                                     Margin="5"
                                     Text="{Binding Query.QueryCategory}" 
                                     />
                            
                            <Label Grid.Column="3" Style="{StaticResource labelTextBox}" Content="Transfer Amount" />
                            <TextBox Grid.Column="3"
                                     Style="{StaticResource textBox}" 
                                     Height="25" 
                                     Margin="5"
                                     Text="{Binding Query.QueryAmount}" 
                                     />
                            
                            <Label Grid.Column="4" Style="{StaticResource labelTextBox}" Content="Transfer Date" />
                            <DatePicker Grid.Column="4"
                                        Style="{StaticResource textBox}" 
                                        Height="25" 
                                        Margin="5"
                                        SelectedDate="{Binding Query.QueryOperationDate}"
                                        />
                            
                            <Label Grid.Column="5" Style="{StaticResource labelTextBox}" Content="Transfer Creation Date" />
                            <DatePicker Grid.Column="5"
                                        Style="{StaticResource textBox}" 
                                        Height="25" 
                                        Margin="5"
                                        SelectedDate="{Binding Query.QueryCreationDate}"
                                        />
                        </Grid>
                    </Grid>
                </Grid>
                
                <DataGrid Grid.Row="1" AutoGenerateColumns="False"
                          ItemsSource="{Binding ArchivedTransfers}"
                          SelectionMode="Single"
                          IsReadOnly="True"
                          ColumnWidth="*">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding SourceName}" Header="Transfer Name" />
                        <DataGridTextColumn Binding="{Binding SourceName}" Header="Transfer Account" />
                        <DataGridTextColumn Binding="{Binding CategoryName}" Header="Transfer Category" />
                        <DataGridTextColumn Binding="{Binding Amount}" Header="Transfer Amount" />
                        <DataGridTextColumn Binding="{Binding OperationDate}" Header="Transfer Date" />
                        <DataGridTextColumn Binding="{Binding CreationDate}" Header="Transfer Creation Date" />
                        <DataGridTextColumn Binding="{Binding LastUpdateDate}" Header="Transfer Archive Date" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
            
        </Grid>
    </Grid>
</UserControl>
