<UserControl x:Class="WPF_BudgetApp.Views.AccountView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WPF_BudgetApp.Views"
             xmlns:comps="clr-namespace:WPF_BudgetApp.Components"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15*" />
            <ColumnDefinition Width="85*"/>
        </Grid.ColumnDefinitions>
        
        <comps:Menu Grid.Column="0" />
        
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="35*" />
                <RowDefinition Height="65*" />
            </Grid.RowDefinitions>
            
            <Border Grid.Row="0" BorderThickness="0 0 0 1" BorderBrush="Gray">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    
                    <Border Grid.Column="0" BorderThickness="0 0 1 0" BorderBrush="Gray">
                        <Grid>
                            <StackPanel>
                                <TextBlock Text="Selected Account : " Style="{StaticResource baseTextBlockStyle}" FontSize="15" />
                                <ComboBox Name="selectedAccountCB" 
                                          ItemsSource="{Binding Accounts}" 
                                          SelectedItem="{Binding CurrentSelectedAccount}"
                                          DisplayMemberPath="SourceName"
                                          SelectedValuePath="SourceName"
                                          SelectionChanged="SelectedAccountCB_OnSelectionChanged"
                                          >
                                </ComboBox>
                            </StackPanel>
                            
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="Account Balance" Style="{StaticResource baseTextBlockStyle}" FontSize="30" />
                                <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedBalance}" Style="{StaticResource baseTextBlockStyle}" FontSize="50" Foreground="Green"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <DataGrid Grid.Row="0" Grid.Column="1" Name="CategoryGrid" AutoGenerateColumns="False"
                                  ItemsSource="{Binding CategoriesDTOs}"
                                  SelectionMode="Single"
                                  IsReadOnly="True"
                                  >
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding CategoryName}" Header="Category Name" />
                            <DataGridTextColumn Binding="{Binding CategorySymbol}" Header="Symbol" />
                                
                            <DataGridTextColumn Binding="{Binding CategoryColor}" Header="Color">
                                <DataGridTextColumn.CellStyle>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="Background" Value="{Binding CategoryColor}" />
                                    </Style>
                                </DataGridTextColumn.CellStyle>
                            </DataGridTextColumn>
                                
                            <DataGridTextColumn Binding="{Binding CategoryCurrentMonth}" Header="Current Month" SortDirection="Descending" />
                            <DataGridTextColumn Binding="{Binding CategoryLastMonth}" Header="Last Month" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
            
            
            
            <StackPanel Grid.Row="1">
                <StackPanel Height="25" Orientation="Horizontal">
                    <Button Name="addTransferButt" Command="{Binding AddTransferCommand}" Style="{StaticResource iconsButtons}" HorizontalAlignment="Left" Margin="5">
                        <iconPacks:PackIconMaterial Kind="Plus" Width="15" Height="15" />
                    </Button> 
                    <Button Name="updateTransferButt" Command="{Binding UpdateTransferCommand}" Style="{StaticResource iconsButtons}" HorizontalAlignment="Left" Margin="5" IsEnabled="False">
                        <iconPacks:PackIconMaterial Kind="ApplicationEdit" Width="15" Height="15" />
                    </Button>
                    <Button Name="deleteTransferButt" Command="{Binding DeleteTransferCommand}" Style="{StaticResource iconsButtons}" HorizontalAlignment="Left" Margin="5" IsEnabled="False">
                        <iconPacks:PackIconMaterial Kind="TrashCan" Width="15" Height="15" />
                    </Button>
                </StackPanel>
                    
                <DataGrid Name="AccountGrid" AutoGenerateColumns="False"
                          ItemsSource="{Binding TransfersDTOs}"
                          SelectedItem="{Binding SelectedTransfer}"
                          SelectionChanged="TransferGrid_OnSelectionChanged"
                          SelectionMode="Single"
                          IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding TransferName}" Header="Transfer Name" />
                                
                        <DataGridTextColumn Binding="{Binding TransferCategoryName}" Header="Transfer Category">
                            <DataGridTextColumn.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="Background" Value="{Binding TransferCategoryColor}" />
                                </Style>
                            </DataGridTextColumn.CellStyle>
                        </DataGridTextColumn>
                                
                        <DataGridTextColumn Binding="{Binding TransferAmount}" Header="Transfer Amount" />
                        <DataGridTextColumn Binding="{Binding TransferDate}" Header="Transfer Date" SortDirection="Descending" />
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
            
        </Grid>
    </Grid>
</UserControl>
